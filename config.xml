<?xml version='1.0' encoding='utf-8'?>
<widget id="com.aevi.sdk.demo.webapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AppFlow WebApp Demonstrator</name>
    <description>
        A sample WebApp using the AppFlow javascript API
    </description>
    <author email="brett@annalytics.co.uk" href="http://developer.aevi.com">
        Brett Cherrington
    </author>
    <content src="index.html" />
    <icon src="res/ic_launcher.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <hook src="scripts/androidBeforeBuild.js" type="before_build" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
